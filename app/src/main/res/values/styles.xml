<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.MaterialComponents.Button.TextButton.Icon.Circle">
        <item name="android:elevation">8dp</item>
        <item name="backgroundTint">@color/blue_and_green</item>
        <item name="iconPadding">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="iconGravity">top</item>
        <item name="iconTint">@color/activity_background</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="MessageLayout.ViewGroup">
        <item name="android:paddingTop">10dp</item>
    </style>

    <style name="MessageLayout.Text">
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>

    <style name="MessageLayout.Text.Username">
        <item name="android:textColor">@color/blue_and_green</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MessageLayout.Text.Message">
        <item name="android:textColor">@color/chat_text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:minWidth">100dp</item>
        <item name="android:maxWidth">280dp</item>
        <item name="android:longClickable">true</item>
    </style>

    <style name="MessageLayout" />

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_dialog_background_shape</item>
        <item name="behavior_peekHeight">346dp</item>
    </style>

    <style name="ChannelTabStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TitleAppearance" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>