<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B3CFB3">

    <androidx.constraintlayout.helper.widget.Flow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="48dp"
        android:orientation="vertical"
        app:constraint_referenced_ids="emojiLoading, findingBugs, discoverYou, justOneMoreStep, internetOn"
        app:flow_verticalGap="36dp"
        app:flow_wrapMode="chain"
        app:layout_constraintBottom_toTopOf="@id/checkmark"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/emojiLoading"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0"
        android:elevation="16dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toTopOf="@id/findingBugs"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="1"
        tools:alpha="1">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/emoji_loading_background_selector"
            android:paddingHorizontal="26dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:drawableLeft="@drawable/turn_on_emoji_load_screen"
                android:drawablePadding="16dp"
                android:fontFamily="@font/inter_medium"
                android:gravity="center"
                android:text="Загружаем смайлы"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="18sp" />

        </FrameLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/findingBugs"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0"
        android:elevation="16dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toTopOf="@id/discoverYou"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/emojiLoading"
        app:layout_constraintVertical_weight="1"
        tools:alpha="1">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/emoji_loading_background_selector"
            android:paddingHorizontal="26dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:drawableLeft="@drawable/no_bugs_load_screen"
                android:drawablePadding="16dp"
                android:fontFamily="@font/inter_medium"
                android:gravity="center"
                android:text="Ищем жуков"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="18sp" />

        </FrameLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/discoverYou"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0"
        android:elevation="16dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toTopOf="@id/justOneMoreStep"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/findingBugs"
        app:layout_constraintVertical_weight="1"
        tools:alpha="1">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/emoji_loading_background_selector"
            android:paddingHorizontal="26dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:drawableLeft="@drawable/who_are_you_sized_load_screen"
                android:drawablePadding="16dp"
                android:fontFamily="@font/inter_medium"
                android:gravity="center"
                android:text="Узнаем кто вы"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="18sp" />

        </FrameLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/justOneMoreStep"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0"
        android:elevation="16dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toTopOf="@id/internetOn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/discoverYou"
        app:layout_constraintVertical_weight="1"
        tools:alpha="1">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/emoji_loading_background_selector"
            android:paddingHorizontal="26dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:drawableLeft="@drawable/one_more_step_load_screen"
                android:drawablePadding="16dp"
                android:fontFamily="@font/inter_medium"
                android:gravity="center"
                android:text="Просто еще один шаг"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="18sp" />

        </FrameLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/internetOn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0"
        android:elevation="16dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/justOneMoreStep"
        app:layout_constraintVertical_weight="1"
        tools:alpha="1">

        <FrameLayout
            android:id="@+id/internetOnContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/emoji_loading_background_selector"
            android:paddingHorizontal="26dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:drawableLeft="@drawable/interner_sized_load_screen"
                android:drawablePadding="16dp"
                android:fontFamily="@font/inter_medium"
                android:gravity="center"
                android:text="Включаем интернеты"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="18sp" />

        </FrameLayout>

    </com.google.android.material.card.MaterialCardView>

    <ImageView
        android:id="@+id/checkmark"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/loadingisover"
        android:src="@drawable/check_animation_rounded"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/internetOn"
        tools:visibility="visible" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/failed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Попробую еще раз"
        android:visibility="gone"
        app:backgroundTint="#F47373"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/internetOn"
        tools:visibility="visible" />

